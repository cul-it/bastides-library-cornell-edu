<div id="content">
	<a id="toggleSidebar" href="#" class="toggles"><i class="fa fa-chevron-right"></i></a>
	<div id="mapCanvas" style="height: 400px; display: block; margin-left: auto; margin-right: auto; margin-top: auto; margin-bottom: auto;">
	  <% unless has_search_parameters? %>
	    <%# if there are no input/search related params, display the "home" partial -%>
	    <%= render 'home' %>
	  <% else %>
	    <%= render 'search_results' %>
	  <% end %>
	</div>
</div>

<% unless current_page?('/ragamala') && (params[:f].nil? && params[:q].nil?)  %>
	<div id="sidebar">
	  <%= render 'search_sidebar' %>
	</div>
<% end %>